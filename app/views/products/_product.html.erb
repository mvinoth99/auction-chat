<div class="card">
    <div class="card-image">
    <figure class="image is-square"> 
        <%= link_to image_tag(product.images.first.variant(resize: "640x480>"), product_path(product)) %>
    </figure> 
        
    </div>

    <div class="card-content">
        <h3 class="pt1 title is-5"> <%= product.title %></div>
        <p class="pv1"> <%= truncate(product.description, length:120) %></p>
        <div class="media pt-3"> 
            <div class="media-left pt-3">
                <figure class="image is-48x48">
                    <%= gravatar_for(product.user,size: 96) %>
                </figure>
            </div>
        </div>
        <div class="media-content">
            <p class="has-text-weight-mb0"><%= product.user.name%></p>
            <p class="has-italic mb0"> 
                <time>
                    posted <%= time_ago_in_words(product.created_at)%> ago
                </time>
            </p>
        </div>
    </div>
</div>