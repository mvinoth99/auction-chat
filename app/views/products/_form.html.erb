<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <% if @product.errors.any? %>
      <div class="errors">
        <p><%= @product.errors.count %> Prevented this product from saving</p>
        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg  %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

   <div class="field">
      <div class="control">
        <%= f.input :title, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :description, required: true, autofocus: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
          <%= f.input :base_price, required: true, autofocus: true, input_html: { class: "number"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class = "field">
      <div class="control">
        <%= f.input :expiry_time, required: true, autofocus: true, input_html: { class: "time"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :images, as: :file,  input_html: { multiple: true, direct_upload: true }, label: false, wrapper: false %>
      </div>
    </div>


  <%= f.button :submit, class: 'button is-link mt3' %>
<% end %>

